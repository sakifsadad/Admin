<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCategory">

    <Button
        android:id="@+id/available_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Product"
        app:layout_constraintBottom_toTopOf="@+id/upcoming_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upcoming_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/available_product" />
</android.support.constraint.ConstraintLayout>